<% if book.favorited_by?(current_user) %>
  <%= link_to book.favorites.count, book_favorites_path(book), class: "fas fa-heart heart_red", method: :delete, remote: true %>
<% else %>
  <%= link_to book.favorites.count, book_favorites_path(book), class: "fas fa-heart heart_blue", method: :post, remote: true %>
<% end %>